
<p id="notice"><%= notice %></p>

<h1>Listing Companies</h1>

<table>
  <thead>
    <tr>
      <th>Logo</th>
      <th>Name</th> 
      <th>Geography</th>
      <th>Hyperlocal</th>
      <th>Commission</th>
      <th>Category</th>
      <th>Delivery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= image_tag(company.logo_url, width:90, height:70) %></td>
        <td><%= company.name %></td>
        <td><%= company.geography %></td>
        <td><%= company.hyperlocal %></td>
        <td><%= company.commission %></td>
        <td><%= company.category %></td>
        <td><%= company.delivery %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

